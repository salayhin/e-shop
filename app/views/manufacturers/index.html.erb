<h3>Manufacturers</h3>
<hr />

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Sort order</th>
    <th></th>
  </tr>

<% @manufacturers.each do |manufacturer| %>
  <tr>
    <td><%= manufacturer.name %></td>
    <td><%= manufacturer.image %></td>
    <td><%= manufacturer.sort_order %></td>
    <td>
      <%= link_to 'Show', manufacturer, :class => 'btn btn-primary btn-xs' %>
      <%= link_to 'Edit', edit_manufacturer_path(manufacturer), :class => 'btn btn-warning btn-xs' %>
      <%= link_to 'Destroy', manufacturer,:class => 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Manufacturer', new_manufacturer_path, :class => 'btn btn-info' %>
