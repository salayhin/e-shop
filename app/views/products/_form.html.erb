<div class="form-horizontal">
  <%= form_for (@product), :validate => true do |f| %>
      <% if @product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
              <% @product.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :name , :class=>"form-control"%>
        </div>
      </div>


      <div class="form-group">
        <label class='col-sm-2 control-label'>Category</label>
        <div class="col-sm-6">
          <%= collection_select(:product, :categories, @categories, :id, :name, options ={}, :class => "form-control chosen-select", :multiple => true) %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :product_code , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :product_code , :class=>"form-control"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :meta_tag_description , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_area :meta_tag_description , :class=>"form-control", :rows=>"2"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :meta_tag_keywords , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_area :meta_tag_keywords , :class=>"form-control", :rows=>"2"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_area :description , :class=>"form-control", :rows=>"5"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :product_tags , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_area :product_tags , :class=>"form-control", :rows=>"5"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :sku , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :sku , :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :upc , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :upc , :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :ean , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :ean , :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :jan , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :jan , :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :isbn , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :isbn , :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :mpn , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :mpn , :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :price , :class=> 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :price , :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit :class=> "btn btn-success" %>
        </div>
      </div>
  <% end %>
</div>
